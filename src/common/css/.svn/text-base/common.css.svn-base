/*清除部分样式*/
body{margin:0;padding:0;font-size:12px;font-family: '微软雅黑',Arial,Helvetica,sans-serif;background:#fff;}/*文档清零,字体,字号,背景设置.*/
div,ul,li,p,form,h1,h2,h3,h4,h5,input,dl,dt,dd,fieldset,table,tr,td{margin:0;padding:0;}/*边界元素清零*/
ul,li,ol{list-style:none;}/*去除列表符号*/
img{border:none;}/*去除图片按钮边框*/
a{text-decoration:none;cursor:pointer;}/*去除超链接下划线*/
img,input,textarea{vertical-align:middle;}
input{outline:none;}
*{box-sizing:border-box;-webkit-box-sizing:border-box;-ms-box-sizing:border-box;}
span{display:inline-block;}
.content-wrap{width:100%;}
/*导航部分*/
.nav{width:100%;z-index:2;background-color:#cdb;}
.nav-top{width:100%; background-color:#ccc;}
.nav-top-cont{width:1240px;height:30px; line-height:30px;margin:0 auto;background-color:#059;}
.nav-wrap{width:1240px; margin:0 auto; height:88px; padding:10px 0;}
.logo{float:left;margin-right:50px;}
.logo img{height:68px;}
.nav-list{float:left;}
.nav-list li{float:left;line-height:68px;font-size:16px;position: relative;}
.nav-list li a{color:#555;padding:0 20px;}
.nav-list li a:hover{color:#00a84d;}
.tel{float:right;padding-top:20px;}
.current{background-color:#00a84d;}
.nav-list .current a{color:#fff;}
.nav-list .current a:hover{color:#fff;}
/*导航下拉菜单*/
.dis-none{display:none;}
.nav-bottom{position: absolute;top:65px;left:0;z-index:999;line-height:38px;padding-top:24px;}
.nav-bottom i{position:absolute;display:inline-block;width:0;height:0;border-width:8px;border-style:dashed;border-color:transparent;border-top-width:0;border-bottom-color:#00a84d;border-bottom-style:solid;top:16px;right:44%;}
.nav-list .nav-bottom a{display:block;padding:0 20px;background:#00a84d;text-align:center;color:#fff;border-bottom:2px solid #fff;}
.nav-list .nav-bottom a:last-child{border:none;}
.nav-list .nav-bottom a:hover{color:#fff;background:#10c161;}
/*banner部分*/
.banner-wrap{width:100%;height:500px;z-index:1;}
/*信息展示部分*/
.main-cont{width:1240px; margin:0 auto;height:900px;background-color:#999;}
/*footer部分*/
.mb20{margin-bottom:20px;}
.footer{width:100%;background-color:#ff8b02;}
.footer-wrap{width:1240px;height:310px;color:#fff;margin:0 auto;padding-top:38px;}
.footer-title{font-size:14px;font-weight:bold;width:100%;height:28px;border-bottom:1px solid #fff;margin-bottom:12px;}
.copy-text{width:100%;text-align:center;height:30px;line-height:30px;background-color:#e6e6e6;}
.footer-left{width:320px;height:272px;float:left;}
.footer-left ul li{width:105px;float:left;height:26px;line-height:26px;}
.footer-left ul li a{color:#fff;}
.footer-mid{width:395px;margin:0 110px;height:272px;float:left;}
.company-info{line-height:22px;}
.footer-right{width:305px;height:272px;float:left;}
.footer-right .footer-title{border:none;margin-bottom:20px;}
.logo-code{width:100%;height:153px;}
.comp-logo{width:50%;text-align:center;border-right:1px solid #fff;float:left;}
.wx-code{width:50%;float:left;text-align:center;}
.number-phone{margin-top:28px;float:left;width:100%;}
.number-phone span{width:50%;text-align:center;}
/*登录框样式*/
.login-wrap{width:400px;height:320px;background-color:#fff;padding:20px 40px;}
.login-wrap p{width:100%;text-align:center; height:40px;line-height:40px;padding:0 20px;margin-bottom:10px;}
.login-wrap p input{height:40px;line-height:40px;padding-left:10px;padding-right:10px;font-size:14px;border:1px solid #ccc;}
.login-wrap .login-title{border-bottom:1px solid #ccc;margin-bottom:20px;}
.login-title span{height:40px;line-height:40px;font-size:18px;font-weight:bold;padding:0 20px;color:#00a84d;border-bottom:2px solid #f27c0e;}
.phone-num input{width:100%;}
.login-wrap .phone-code{margin-bottom:3px;}
.pic-code input,.phone-code input{width:160px;float:left;margin-right:10px;}
.pic-code span,.phone-code span{width:110px;height:40px;line-height:40px;text-align:center;float:left;}
.pic-code span img{float: left;}
.phone-code span{background-color:#00a84d;color:#fff;}
.login-wrap .login-warn{width:100%;height:22px;line-height:22px;margin-bottom:3px;font-size:12px;}
.login-warn a{color:#2383e6;}
.login-btn button{width:60%;height:40px;line-height:40px;font-size:16px;color:#fff;background-color:#f27c0e;border:none;}
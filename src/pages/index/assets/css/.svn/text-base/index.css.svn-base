/*banner部分*/
.web-login:hover{ color:#00A84D}
.banner{height:500px;width:100%;background-color:#aaa;}
.banner .d1{width:100%;height:500px;display:block;}

/*发布信息*/
.send-wrap{width:1240px;position:relative;margin:0 auto;z-index:999;top:-410px;}
.send-info{background:#fff;width:650px;padding:8px;background:url(../images/bj_04.png) left top repeat;box-shadow: 0px 0px 10px #000;-moz-box-shadow: 0px 0px 10px #000;-webkit-box-shadow: 0px 0px 10px #000;overflow:hidden;}
.info-list{width:66px;float:left;text-align:center;}
.info-list li{height:152px;}
.info-list li a{display:block;height:152px;}
.info-list li.cur a{display:block;background:#fff;border:1px solid #ffa905;border-right:none;position:relative;z-index:10;width:67px;}
.info-list li img{margin-top:21px;}
.banner_tab_div{float:left;width:550px;height:304px;background:#fff;position:relative;padding-left:32px;border:1px solid #ffa905;}
.banner_tab_div input[type=text]{margin:0;width:160px;font-size:12px;}
.banner_tab_div>ul>li{margin-top:20px;}
.banner_tab_div>ul>li span{position:relative;display:inline-block;}
.info-wrap{float:left;width:568px; height:304px;padding-left:30px;background-color:#fff;border:1px solid #ffa905;}
.cont-title{height:70px;line-height:70px;background-color:#ddd;}
/* 发布货源 */
.info-wrap li{height:56px;padding-top:20px;}
.title{height: 36px;line-height:36px;margin-right:10px;width:80px;}
.title span{color:#f00;margin-right:5px;}
.info-wrap-goods li input{height:36px;line-height:36px;padding:0 10px;width:200px;margin-right:5px;background:#fff url(../images/1_13.png) 175px no-repeat;border:1px solid #999;}
.info-wrap-goods li .dz-input{width:240px;margin-right:0;background-image:none;}
.btnLogin{width:200px;margin-left:73px;margin-right:20px;height:36px;line-height:36px;text-align:center;color:#fff;font-size:16px;display:inline-block;background:url(../images/1_12.jpg) left repeat-x;}
.refresh{font-size:16px;color:#555;}

/* 发布车源 */
.info-wrap-cars li input{height:36px;line-height:36px;padding:0 10px;width:160px;margin-right:5px;background:#fff url(../images/1_13.png) 135px no-repeat;border:1px solid #999;}


/*信息展示部分*/
.cont1{height:300px;background-color:#cf9;}
.cont2{height:300px;background-color:#fc9;}
.cont3{height:300px;background-color:#9cf;}